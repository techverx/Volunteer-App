= simple_form_for(@company) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :address
    = f.input :logo
    = f.input :website
    = f.input :facebook_page
    = f.input :linkedin
    = f.input :description
    = f.association :user
    = f.association :country

  .form-actions
    = f.button :submit
